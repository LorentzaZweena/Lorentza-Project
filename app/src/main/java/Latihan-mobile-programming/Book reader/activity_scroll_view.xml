<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.belajarandroidactivity.ScrollView">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/ivBackground"
        android:src="@drawable/spark"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/ivBookPicture"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/spark" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvBookTitle"
        android:textSize="20sp"
        android:text="Spark : The movie (The lost chamber)"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/ivBookPicture"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvBookAuthor"
        android:textSize="14sp"
        android:text="Rowling"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/ivBookPicture"
        android:layout_below="@+id/tvBookTitle"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        />
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/ivStar"
        android:background="@drawable/baseline_star_24"
        android:layout_below="@id/tvBookTitle"
        android:layout_toRightOf="@+id/tvBookAuthor"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/empat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivStar"
        android:text="4.6"
        android:textColor="@color/white"
        android:layout_marginTop="131sp"
        android:layout_marginStart="5sp"
        />
    <TextView
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/empat"
        android:text="136 reviews"
        android:layout_marginTop="131sp"
        android:textColor="@color/white"
        android:layout_marginStart="15sp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_below="@+id/ivBookPicture"
        android:layout_marginStart="24sp"
        android:id="@+id/kotak4"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120sp"
            android:layout_height="25sp"
            android:text="adventure"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="#B095ACE8"
            android:textColor="@color/white"
            android:textSize="16sp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_below="@+id/ivBookPicture"
        android:layout_marginStart="24sp"
        android:id="@+id/kotak5"
        android:layout_toRightOf="@+id/kotak4"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="80sp"
            android:layout_height="25sp"
            android:text="Fiction"
            android:background="#B0A5B6E3"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_below="@+id/ivBookPicture"
        android:layout_marginStart="24sp"
        android:id="@+id/kotak6"
        android:layout_toRightOf="@+id/kotak5"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="95sp"
            android:layout_height="25sp"
            android:text="Best seller"
            android:background="#B095ACE8"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synopsis"
        android:layout_below="@+id/kotak4"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/synopsis"
        android:layout_marginStart="22sp"
        android:layout_marginTop="20dp"
        android:textColor="#012D59"
        />
    <ScrollView
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_below="@+id/kotak4"
        android:layout_marginTop="60sp"
        android:layout_height="180dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/synopsis"
                android:layout_marginStart="22dp"
                android:id="@+id/bookDescription"
                android:text="@string/des2"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="25dp"
                android:lineSpacingExtra="8dp"
                android:textSize="16sp"
                android:textColor="#A58C8C"
                tools:ignore="NotSibling" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookDescription"
                android:layout_marginStart="22dp"
                android:id="@+id/bookDescription2"
                android:text="@string/des2"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="25dp"
                android:lineSpacingExtra="8dp"
                android:textSize="16sp"
                android:textColor="#A58C8C"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookDescription2"
                android:layout_marginStart="22dp"
                android:id="@+id/bookDescription3"
                android:text="@string/des2"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="25dp"
                android:lineSpacingExtra="8dp"
                android:textSize="16sp"
                android:textColor="#A58C8C"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookDescription3"
                android:layout_marginStart="22dp"
                android:id="@+id/bookDescription4"
                android:text="@string/des2"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="25dp"
                android:lineSpacingExtra="8dp"
                android:textSize="16sp"
                android:textColor="#A58C8C"
                />
        </RelativeLayout>
    </ScrollView>
    <TextView
        android:id="@+id/riviw"
        android:layout_width="match_parent"
        android:text="Review"
        android:layout_below="@+id/des"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10sp"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:id="@+id/review2"
        android:layout_width="match_parent"
        android:layout_below="@+id/riviw"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bebek"
                android:layout_width="90sp"
                android:layout_height="90dp"
                android:layout_marginTop="15sp"
                android:src="@drawable/ducky"
                android:layout_marginStart="15sp"
                />

            <TextView
                android:layout_marginTop="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bebek"
                android:layout_below="@+id/review2"
                android:layout_marginStart="20sp"
                android:text="Rubby ducky3456"
                android:textStyle="bold"
                android:textSize="18dp"
                android:id="@+id/username"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/ayato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username"
                android:text="@string/des3"
                android:textColor="#8E7F7F"
                android:layout_marginStart="120sp"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="70sp"
                android:lineSpacingExtra="9sp"
                android:textSize="16sp"
                android:layout_marginBottom="80sp"
                />
            <ImageView
                android:id="@+id/bebek2"
                android:layout_width="90sp"
                android:layout_height="90dp"
                android:layout_marginTop="25sp"
                android:src="@drawable/ducky"
                android:layout_below="@+id/bebek"
                android:layout_marginStart="15sp"
                />

            <TextView
                android:layout_marginTop="150sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bebek2"
                android:layout_marginStart="20sp"
                android:text="Rubby ducky3456"
                android:textStyle="bold"
                android:textSize="18dp"
                android:id="@+id/username2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username2"
                android:text="@string/des3"
                android:textColor="#8E7F7F"
                android:layout_marginStart="120sp"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="70sp"
                android:lineSpacingExtra="9sp"
                android:textSize="16sp"
                android:layout_marginBottom="80sp"
                />

        </RelativeLayout>
    </ScrollView>
    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginTop="50sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"

        android:text="Continue reading"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>
</RelativeLayout>