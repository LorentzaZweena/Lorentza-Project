<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rlJudulDoa">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/gambarDoa"
                    android:src="@drawable/doa_makan"
                    />
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJudulDoa2"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:text="Doa sebelum makan"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:textSize="18sp"
                    />
                <ImageButton
                    android:id="@+id/ibCollapse"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_toRightOf="@+id/tvJudulDoa2"
                    android:backgroundTint="#5A5959"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C1C0C0"/>
            <RelativeLayout
                android:id="@+id/rlIsiDoa"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvDoaArab"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="اَلْحَمْدُ لِلّٰهِ الَّذِي عَافَانِي فِي جَسَدِي وَرَدَّ عَلَيَّ رُوْحِيْ وَأَذِنَ لِيْ بِذِكْرِهِ"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:maxLines="10"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/tvDoaLatin"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                   android:text="@string/doa_latin"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:maxLines="10"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/tvDoaArab"
                    android:layout_marginStart="10dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>