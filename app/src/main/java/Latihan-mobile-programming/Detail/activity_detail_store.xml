<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.belajarandroidactivity.DetailStore">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"
        />
    
    <ImageButton
        android:id="@+id/gambar1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/ducky"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/tvProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rubber duck"
        android:textColor="#533535"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@+id/gambar1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />
    
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$50"
        android:textColor="#F57"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/tvProduk"
        android:layout_marginStart="20dp"
        />
    
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/ibFavorite"
        android:background="@drawable/baseline_favorite_24"
        android:backgroundTint="#F57"
        android:layout_below="@+id/tvProduk"
        android:layout_marginEnd="20dp"
        />
    
    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/star1"
        android:background="@drawable/baseline_star_24"
        android:backgroundTint="#FBC"
        android:layout_below="@+id/tvPrice"
        android:layout_marginStart="20dp"
        />
    
    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/star2"
        android:background="@drawable/baseline_star_24"
        android:backgroundTint="#FBC"
        android:layout_below="@+id/tvPrice"
        android:layout_toRightOf="@+id/star1"
        />

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/star3"
        android:background="@drawable/baseline_star_24"
        android:backgroundTint="#FBC"
        android:layout_below="@+id/tvPrice"
        android:layout_toRightOf="@+id/star2"
        />

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/star4"
        android:background="@drawable/baseline_star_24"
        android:backgroundTint="#FBC"
        android:layout_below="@+id/tvPrice"
        android:layout_toRightOf="@+id/star3"
        />

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/star5"
        android:background="@drawable/bintang_abu"
        android:layout_below="@+id/tvPrice"
        android:layout_toRightOf="@+id/star4"
        />

    <TextView
        android:id="@+id/Brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:textSize="20sp"
        android:layout_below="@+id/star1"
        android:layout_marginTop="30sp"
        android:layout_marginStart="25sp"
        android:textColor="#A89F9F"
        />

    <TextView
        android:id="@+id/Brand2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bantar"
        android:textSize="20sp"
        android:layout_below="@+id/star1"
        android:layout_marginTop="30sp"
        android:layout_marginStart="80sp"
        android:layout_toRightOf="@+id/Brand"
        />

    <TextView
        android:id="@+id/Tipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipe"
        android:textSize="20sp"
        android:layout_below="@+id/Brand"
        android:layout_marginTop="15sp"
        android:layout_marginStart="25sp"
        android:textColor="#A89F9F"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ducky rub 2784"
        android:textSize="20sp"
        android:layout_below="@+id/Brand2"
        android:layout_marginTop="15sp"
        android:layout_marginStart="80sp"
        android:layout_toRightOf="@+id/Brand"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:text="Purchase"
        android:textSize="20sp"
        android:backgroundTint="#752F2F"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        />
</RelativeLayout>