<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Pelicia.Film1Activity">

    <ImageView
        android:id="@+id/gambar9"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/image39"
        />

    <ImageButton
        android:id="@+id/ibBackPelicia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_back_white"
        android:layout_marginTop="32sp"
        android:layout_marginStart="35sp"
        />

    <TextView
        android:id="@+id/teks42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Pelicia"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_marginTop="25sp"
        android:textStyle="bold"
        />

    <ImageButton
        android:id="@+id/ibAddFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_favorite_whitesmoke"
        android:layout_toRightOf="@id/teks42"
        android:backgroundTint="@color/white"
        android:layout_marginTop="30sp"
        android:layout_marginStart="90dp"
        />

    <ImageView
        android:id="@+id/ibAddFavorite2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_favorite_24"
        android:layout_toRightOf="@id/teks42"
        android:backgroundTint="@color/red"
        android:layout_marginTop="30sp"
        android:layout_marginStart="90dp"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/ibPeliciaPlus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/gambar9"
        android:layout_marginStart="50sp"
        android:layout_marginTop="18dp"
        android:background="@drawable/baseline_add_24" />
    
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_below="@id/gambar9"
        android:id="@id/ibPeliciaPlusHOAH"
        app:cardCornerRadius="80sp"
        android:layout_marginTop="-30dp"
        android:elevation="200sp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        
        <ImageButton
            android:id="@+id/PeliciaPlay"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bulet"
            android:src="@drawable/baseline_play_arrow_24"
            />
    </androidx.cardview.widget.CardView>
    <ImageButton
        android:id="@+id/ibPeliciaShare"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/gambar9"
        android:background="@drawable/baseline_share_24"
        android:layout_marginTop="20sp"
        android:layout_marginStart="50sp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="50dp"
        />
    <TextView
        android:id="@+id/teks43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THE FOREST"
        android:layout_below="@+id/ibPeliciaPlusHOAH"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/teks44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adventure, family, fantasy"
        android:layout_below="@id/teks43"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"
        android:textColor="#969696"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/bintang1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teks44"
        android:src="@drawable/baseline_star_rate_24"
        android:layout_marginStart="40dp"
        />
    <ImageView
        android:id="@+id/bintang2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teks44"
        android:src="@drawable/baseline_star_rate_24"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/bintang1"
        />
    <ImageView
        android:id="@+id/bintang3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teks44"
        android:src="@drawable/baseline_star_rate_24"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/bintang2"
        />
    <ImageView
        android:id="@+id/bintang4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teks44"
        android:src="@drawable/baseline_star_rate_24"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/bintang3"
        />
</RelativeLayout>