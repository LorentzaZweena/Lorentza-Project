<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="Pelicia.DashboardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="620dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/ibMenuPelicia"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:background="@drawable/ic_menu"
                android:layout_marginStart="40sp"
                android:layout_marginTop="45sp"
                android:layout_toLeftOf="@+id/teks35"
                android:layout_marginEnd="95dp"
                />
            <TextView
                android:id="@+id/teks35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pelicia"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="24dp"
                />
            <ImageButton
                android:id="@+id/ibSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/teks35"
                android:background="@drawable/ic_search"
                android:layout_marginTop="45dp"
                android:layout_marginStart="80dp"
                />

            <ScrollView
                android:id="@+id/svPelicia1"
                android:layout_width="match_parent"
                android:layout_below="@id/teks35"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_height="167dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/rvDashboardPelicia"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>
            </ScrollView>
            <ScrollView
                android:id="@+id/svPelicia2"
                android:layout_width="match_parent"
                android:layout_below="@id/svPelicia1"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_height="80dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/rvDashboardPelicia2"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>
            </ScrollView>
            <TextView
                android:id="@+id/teks36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular in Pelicia"
                android:layout_below="@id/svPelicia2"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                />
            <ImageButton
                android:id="@+id/ibArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow"
                android:layout_toRightOf="@id/teks36"
                android:layout_marginTop="380dp"
                android:layout_marginStart="160dp"
                />
            <ScrollView
                android:id="@+id/svPelicia3"
                android:layout_width="match_parent"
                android:layout_below="@id/teks36"
                android:layout_marginTop="20dp"
                android:layout_height="190dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/rvDashboardPelicia3"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>
            </ScrollView>
            <TextView
                android:id="@+id/teks37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium"
                android:layout_below="@id/svPelicia3"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginStart="20sp"
                />
            <ImageButton
                android:id="@+id/ibArrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow"
                android:layout_toRightOf="@id/teks37"
                android:layout_marginTop="227dp"
                android:layout_marginStart="225dp"
                android:layout_below="@id/ibArrow"
                />

            <ScrollView
                android:id="@+id/Premium"
                android:layout_width="match_parent"
                android:layout_below="@id/teks37"
                android:layout_marginTop="10dp"
                android:layout_height="190dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDashboardPelicia4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>

            </ScrollView>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_home_merah"
            android:layout_marginStart="65sp"
            android:layout_marginTop="35sp"
            />
        <TextView
            android:id="@+id/teks38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home"
            android:text="Home"
            android:layout_marginStart="60dp"
            android:textSize="13dp"
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:textColor="@color/red"
            />
        <ImageButton
            android:id="@+id/Favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/home"
            android:background="@drawable/ic_favorite_whitesmoke"
            android:layout_marginStart="50sp"
            android:layout_marginTop="35sp"
            />
        <TextView
            android:id="@+id/teks39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Favorite"
            android:text="Favorite"
            android:layout_marginStart="128dp"
            android:textSize="13dp"
            android:layout_marginTop="3dp"
            android:textColor="#A0A0A0"
            />
        <ImageButton
            android:id="@+id/History"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Favorite"
            android:background="@drawable/ic_time"
            android:layout_marginStart="45sp"
            android:layout_marginTop="35sp"
            />
        <TextView
            android:id="@+id/teks40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/History"
            android:text="History"
            android:layout_marginStart="200dp"
            android:textSize="13dp"
            android:layout_marginTop="3dp"
            android:textColor="#A0A0A0"
            />
        <ImageButton
            android:id="@+id/Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/History"
            android:background="@drawable/ic_profile"
            android:layout_marginStart="44sp"
            android:layout_marginTop="35sp"
            android:backgroundTint="#A0A0A0"
            />
        <TextView
            android:id="@+id/teks41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Profile"
            android:text="Profile"
            android:layout_marginStart="27dp"
            android:layout_toRightOf="@id/teks40"
            android:textSize="13dp"
            android:layout_marginTop="3dp"
            android:textColor="#A0A0A0"
            />
    </RelativeLayout>
</LinearLayout>