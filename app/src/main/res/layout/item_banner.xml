<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="306dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#5EB1B3"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="20sp"
    android:layout_height="158dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvBanner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klinik online"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25sp"
            />

        <TextView
            android:id="@+id/tvBanner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBanner1"
            android:text="Kami siap membantu \nanda"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginStart="24sp"
            android:layout_marginTop="15dp"
            android:lineHeight="25dp"
            />

        <ImageButton
            android:id="@+id/ivBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvBanner2"
            android:src="@drawable/image69"
            android:backgroundTint="#5EB1B3"
            android:scaleType="center"
            android:layout_marginEnd="12dp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>