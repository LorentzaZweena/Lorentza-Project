<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".suround.DetailActivity">

    <ImageButton
        android:id="@+id/ibBack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_back"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        />

    <TextView
        android:id="@+id/teks134"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My tickets"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="316dp"
        android:id="@+id/detailTicket"
        android:layout_below="@id/teks134"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="50dp"
        android:layout_height="408dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <ImageView
                android:id="@+id/gambar49"
                android:layout_width="286dp"
                android:layout_height="158dp"
                android:src="@drawable/image138"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/teks135"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gambar49"
                android:text="Name"
                android:textSize="14dp"
                android:layout_marginTop="13sp"
                android:layout_marginStart="15sp"
                android:textColor="#B8B8B8"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/teks136"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teks135"
                android:text="Chêne - Tranquillité"
                android:textSize="15dp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="15sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/teks137"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teks136"
                android:text="Date"
                android:textSize="14dp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="15sp"
                android:textColor="#B8B8B8"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/teks138"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teks137"
                android:text="Friday, 22 Sep 2098"
                android:textSize="15dp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="15sp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/gambar50"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/gambar49"
                android:layout_toRightOf="@id/teks136"
                android:src="@drawable/image149"
                android:layout_marginTop="25dp"
                android:layout_marginStart="90dp"
                />

            <TextView
                android:id="@+id/teks139"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gambar50"
                android:text="Time"
                android:textSize="14dp"
                android:layout_toRightOf="@id/teks137"
                android:layout_marginStart="160sp"
                android:textColor="#B8B8B8"
                android:layout_marginTop="7.5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/teks140"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teks139"
                android:text="06.00 PM"
                android:textSize="15dp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@id/teks138"
                android:layout_marginStart="55sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/garis5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/teks140"
                android:layout_marginTop="20dp"
                android:backgroundTint="#E4E4E4"
                />
            
            <Button
                android:id="@+id/btnDownload"
                android:layout_width="268dp"
                android:layout_height="52dp"
                android:layout_below="@id/garis5"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#EDEEF5"
                android:text="Download as image"
                android:textColor="@color/blue"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <ImageButton
        android:id="@+id/ibHome"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_home"
        android:backgroundTint="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50sp"
        />
    <ImageButton
        android:id="@+id/ibFavorite"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_favorite"
        android:layout_marginTop="13dp"
        android:layout_marginStart="72sp"
        android:layout_toRightOf="@id/ibHome"
        android:background="@color/white"
        />
    <ImageButton
        android:id="@+id/ibTicket"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="13dp"
        android:layout_marginStart="70sp"
        android:layout_toRightOf="@id/ibFavorite"
        android:background="@drawable/ic_ticket"
        android:backgroundTint="@color/blue"
        />
    <ImageButton
        android:id="@+id/ibProfile"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="13dp"
        android:layout_marginStart="70sp"
        android:layout_toRightOf="@id/ibTicket"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/teks25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_below="@id/ibHome"
        android:textSize="11dp"
        android:textColor="@color/black"
        android:layout_marginStart="45sp"
        android:layout_marginTop="3dp"
        />
    <TextView
        android:id="@+id/teks26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite"
        android:layout_below="@id/ibFavorite"
        android:layout_toRightOf="@id/teks25"
        android:textSize="11dp"
        android:textColor="@color/black"
        android:layout_marginStart="57sp"
        android:layout_marginTop="3dp"
        />
    <TextView
        android:id="@+id/teks27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket"
        android:layout_below="@id/ibFavorite"
        android:layout_toRightOf="@id/teks26"
        android:textSize="12dp"
        android:textColor="@color/blue"
        android:layout_marginStart="55sp"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/teks28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:layout_below="@id/ibFavorite"
        android:layout_toRightOf="@id/teks27"
        android:textSize="11dp"
        android:textColor="@color/black"
        android:layout_marginStart="60sp"
        android:layout_marginTop="3dp"
        />
</RelativeLayout>