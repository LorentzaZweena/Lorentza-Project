<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="SehatQ.ChatReadActivity">

    <LinearLayout
        android:id="@+id/llAtas"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#5EB1B3"
        android:layout_height="85dp">

        <ImageButton
            android:id="@+id/ibBackSehatQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back"
            android:backgroundTint="@color/white"
            android:layout_marginTop="30sp"
            android:layout_marginStart="30sp"
            />

        <ImageView
            android:id="@+id/ivDokter"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:src="@drawable/image90"
            android:layout_marginTop="14sp"
            android:layout_marginStart="20sp"
            />

        <TextView
            android:id="@+id/tvChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Galla Acropolite"
            android:layout_marginTop="17dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="-158dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spesialis kecantikan"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>