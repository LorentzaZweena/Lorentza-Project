<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="SehatQ.ChatReadActivity">

    <LinearLayout
        android:id="@+id/llAtas"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#5EB1B3"
        android:layout_height="85dp">

        <ImageButton
            android:id="@+id/ibBackSehatQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back"
            android:backgroundTint="@color/white"
            android:layout_marginTop="30sp"
            android:layout_marginStart="30sp"
            />

        <ImageView
            android:id="@+id/ivDokter"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:src="@drawable/image90"
            android:layout_marginTop="14sp"
            android:layout_marginStart="20sp"
            />

        <TextView
            android:id="@+id/tvChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Galla Acropolite"
            android:layout_marginTop="17dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="-158dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spesialis kecantikan"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_marginTop="30sp"
        android:id="@+id/cvChat1"
        android:backgroundTint="#5EB1B3"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="250sp"
        android:layout_below="@id/llAtas"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat siang!"
            android:layout_marginTop="7dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="165dp"
        android:layout_marginTop="20sp"
        android:id="@+id/cvChat2"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="20sp"
        android:layout_below="@id/cvChat1"
        android:layout_height="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halo kak! Ada yang \nbisa saya bantu?"
            android:layout_marginTop="9dp"
            android:layout_marginStart="12dp"
            android:lineHeight="25dp"
            android:textSize="16dp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_marginTop="20sp"
        android:id="@+id/cvChat3"
        app:cardCornerRadius="5dp"
        android:backgroundTint="#5EB1B3"
        android:layout_marginStart="135sp"
        android:layout_below="@id/cvChat2"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya pengen nanya nih, skincare yang bagus untuk kulit berminyak apa ya?"
            android:layout_marginTop="13dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:lineHeight="25dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="290dp"
        android:layout_marginTop="20sp"
        android:id="@+id/cvChat4"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="20sp"
        android:layout_below="@id/cvChat3"
        android:layout_height="175dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kalau dari saran saya, ada beberapa skincare yang bagus untuk kulit berminyak : \n1. Cetaphil Gentle Skin Cleanser \n2. Elsheskin Deep Cleansing for Oily Skin"
            android:layout_marginTop="13dp"
            android:layout_marginStart="12dp"
            android:lineHeight="25dp"
            android:textSize="16dp"
            />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_below="@id/cvChat4"
        android:background="@drawable/stroke"
        android:layout_marginTop="110sp"
        android:layout_marginStart="15sp"
        android:drawableStart="@drawable/baseline_insert_emoticon_24"
        android:hint="Ketik pesan"
        android:paddingStart="10dp"
        android:drawableTint="#AAAAAA"
        android:drawablePadding="8sp"
        />

    <ImageButton
        android:id="@+id/ibRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke"
        android:layout_toRightOf="@id/etMessage"
        android:layout_below="@id/cvChat4"
        android:layout_marginTop="105dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/baseline_mic_24"
        android:padding="10dp"
        android:backgroundTint="#5EB1B3"
        />

</RelativeLayout>