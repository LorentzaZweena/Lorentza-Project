<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#F2F2F2"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="120dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivRekomendasiDokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image81"
            android:layout_marginTop="13dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/tvNamaRekomendasiDokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. IsanamikÃ´"
            android:layout_toRightOf="@id/ivRekomendasiDokter"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13sp"
            />

        <TextView
            android:id="@+id/tvSpesialisRekomendasiDokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kesehatan lansia"
            android:layout_toRightOf="@id/ivRekomendasiDokter"
            android:textSize="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10sp"
            android:layout_below="@id/tvNamaRekomendasiDokter"
            />

        <TextView
            android:id="@+id/tvProfileRekomendasiDokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat profile"
            android:layout_toRightOf="@id/ivRekomendasiDokter"
            android:textSize="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10sp"
            android:textColor="#214955"
            android:textStyle="bold"
            android:layout_below="@id/tvSpesialisRekomendasiDokter"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>