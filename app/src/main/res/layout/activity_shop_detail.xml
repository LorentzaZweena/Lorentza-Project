<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="SehatQ.ShopDetailActivity">

    <ImageButton
        android:id="@+id/ibBackSehatQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_back"
        android:layout_marginTop="40sp"
        android:layout_marginStart="35sp"
        />

    <TextView
        android:id="@+id/teks74"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vitamin"
        android:layout_toRightOf="@id/ibBackSehatQ"
        android:layout_marginTop="38dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20sp"
        />

    <ImageButton
        android:id="@+id/ibCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_shopping_cart_24"
        android:layout_toRightOf="@id/teks74"
        android:layout_marginTop="38dp"
        android:layout_marginStart="150dp"
        android:backgroundTint="#D9D9D9"
        />

    <ImageButton
        android:id="@+id/ibNotifSehatQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_notif"
        android:layout_toRightOf="@id/ibCart"
        android:layout_marginTop="38dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#D9D9D9"
        />
    
    <LinearLayout
        android:id="@+id/llProduct"
        android:layout_width="match_parent"
        android:layout_below="@id/teks74"
        android:layout_marginTop="20dp"
        android:background="#D9D9D9"
        android:layout_height="255dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image110"
            android:layout_marginStart="90dp"
            android:layout_marginTop="13dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/teks75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nature made"
        android:layout_below="@id/llProduct"
        android:textSize="20sp"
        android:layout_marginStart="30sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />

    <ImageView
        android:id="@+id/gambar16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image111"
        android:layout_toRightOf="@id/teks75"
        android:layout_below="@id/llProduct"
        android:layout_marginTop="23dp"
        android:layout_marginStart="150dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teks75"
        android:text="Vitamin B-12"
        android:textSize="16dp"
        android:layout_marginStart="29sp"
        android:layout_marginTop="7dp"
        android:id="@+id/teks76"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gambar16"
        android:layout_toRightOf="@id/teks76"
        android:text="Rp35.000"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="@color/greenSehatQ"
        android:layout_marginStart="170dp"
        android:id="@+id/teks77"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nature Made adalah vitamin B - 12 yang berjumlah 40 tablet. Vitamin tersebut dapat merawat sel pencernaan, fungsi sistem saraf, dan fungsi sumsum tulang."
        android:layout_below="@id/teks76"
        android:textSize="16dp"
        android:textColor="#828282"
        android:justificationMode="inter_word"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:lineHeight="27dp"
        android:id="@+id/teks78"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teks78"
        android:text="Tanggal kadaluarsa"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20sp"
        android:id="@+id/teks79"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teks79"
        android:text="27 Desember 2090"
        android:textSize="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10sp"
        android:id="@+id/teks80"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image88"
        android:layout_below="@+id/teks80"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/gambar17"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gambar17"
        android:layout_marginTop="20sp"
        android:layout_marginStart="40sp"
        android:backgroundTint="@color/greenSehatQ"
        android:text="Tambahkan ke keranjang"
        android:textSize="20sp"
        android:id="@+id/btnAddToCart"
        />

</RelativeLayout>