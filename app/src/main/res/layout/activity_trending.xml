<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F4F4F4"
    tools:context=".suround.TrendingActivity">

    <ImageButton
        android:id="@+id/ibBackTrending"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:background="@drawable/ic_back"
        android:layout_marginTop="30sp"
        android:layout_marginStart="30sp"
        />

    <TextView
        android:id="@+id/teks111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playing"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="27sp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@id/teks111"
        android:layout_marginTop="20sp"
        app:cardCornerRadius="30sp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/teks112"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listening to"
                android:layout_centerHorizontal="true"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_marginTop="30sp"
                />

            <ImageView
                android:id="@+id/ivTrending"
                android:layout_width="270dp"
                android:layout_height="260dp"
                android:src="@drawable/image14"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/teks112"
                android:layout_marginTop="20sp"
                />

            <TextView
                android:id="@+id/teks113"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kill bill"
                android:layout_below="@id/ivTrending"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="25sp"
                android:layout_marginStart="45sp"
                />

            <TextView
                android:id="@+id/teks114"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"
                android:layout_below="@id/teks113"
                android:layout_marginStart="45sp"
                android:textSize="16sp"
                android:textColor="#838383"
                android:layout_marginTop="10dp"
                />

            <ProgressBar
                android:id="@+id/progressSuround"
                android:layout_width="358dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="20"
                android:background="#FFF"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:padding="20dp"
                android:layout_below="@id/ivTrending"
                android:layout_marginTop="100dp"
                android:layout_centerHorizontal="true"
                android:progressTint="@color/blue"
                />

            <ImageButton
                android:id="@+id/ibTrendingSuround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_favorite"
                android:layout_below="@id/ivTrending"
                android:layout_toRightOf="@id/teks113"
                android:layout_marginTop="27dp"
                android:layout_marginStart="220dp"
                />

            <ImageView
                android:id="@+id/FavoriteSuround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lel"
                android:layout_below="@id/ivTrending"
                android:layout_toRightOf="@id/teks113"
                android:layout_marginTop="27dp"
                android:layout_marginStart="220dp"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/teks115"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressSuround"
                android:text="1.15"
                android:textSize="14dp"
                android:textColor="#838383"
                android:layout_marginStart="45sp"
                android:layout_marginTop="-13dp"
                />

            <TextView
                android:id="@+id/teks116"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressSuround"
                android:text="3.02"
                android:textSize="14dp"
                android:textColor="#838383"
                android:layout_marginStart="260sp"
                android:layout_marginTop="-13dp"
                android:layout_toRightOf="@id/teks115"
                />

            <ImageView
                android:id="@+id/ivShuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teks115"
                android:src="@drawable/baseline_shuffle_24"
                android:layout_marginStart="45dp"
                android:layout_marginTop="40sp"
                />

            <ImageButton
                android:id="@+id/ibPlay"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/stroke"
                android:backgroundTint="@color/blue"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/teks116"
                android:layout_marginTop="20sp"
                android:src="@drawable/play_arrow_24"
                />

            <ImageButton
                android:id="@+id/ibPause"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/stroke"
                android:backgroundTint="@color/blue"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/teks116"
                android:layout_marginTop="20sp"
                android:src="@drawable/baseline_pause_24"
                android:visibility="invisible"
                />

            <ImageButton
                android:id="@+id/ibSkip"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/teks115"
                android:background="@drawable/baseline_skip_previous_24"
                android:layout_toLeftOf="@id/ibPlay"
                android:layout_marginTop="37sp"
                android:layout_marginRight="20dp"
                />

            <ImageButton
                android:id="@+id/ibSkip2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/teks115"
                android:background="@drawable/baseline_skip_next_24"
                android:layout_toRightOf="@id/ibPlay"
                android:layout_marginTop="37sp"
                android:layout_marginLeft="20dp"
                />

            <ImageView
                android:id="@+id/ivAdd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/ibSkip2"
                android:layout_below="@id/teks116"
                android:background="@drawable/baseline_playlist_add_24"
                android:layout_marginTop="35dp"
                android:layout_marginStart="50dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>