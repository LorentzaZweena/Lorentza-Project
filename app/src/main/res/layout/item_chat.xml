<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="295dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="10dp"
    android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/ibDokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/image90"
            />

        <TextView
            android:id="@+id/tvNamaDokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ibDokter"
            android:text="Dr. Galla Acropolite"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNamaDokter"
            android:layout_toRightOf="@id/ibDokter"
            android:text="Selamat siang!"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textColor="#54000000"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>