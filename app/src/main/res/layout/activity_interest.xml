<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context=".suround.InterestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/ibBack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:backgroundTint="#E5E5E5"
            />

        <Button
            android:id="@+id/btnSkipPart3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="skip"
            android:textColor="@color/black"
            android:backgroundTint="#E5E5E5"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:layout_marginEnd="15dp"
            />

        <TextView
            android:id="@+id/teks15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ibBack2"
            android:text="Choose interest"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginStart="37dp"
            android:layout_marginTop="10sp"
            />

        <TextView
            android:id="@+id/teks16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teks15"
            android:text="Choose your favorite interest to get new \nsongs all in one place related to it "
            android:layout_marginStart="37dp"
            android:textSize="16dp"
            android:layout_marginTop="10sp"
            android:lineHeight="25dp"
            android:textColor="#696969"
            />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@id/teks16"

            android:layout_marginTop="27dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp">

            </androidx.recyclerview.widget.RecyclerView>
        </ScrollView>
        <Button
            android:id="@+id/btnFinish"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_below="@id/scrollView"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="40dp"
            android:text="Finish"
            android:textSize="16dp"
            android:backgroundTint="@color/blue"
            />
    </RelativeLayout>
</LinearLayout>