<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".suround.LoginActivity">

    <ImageView
        android:id="@+id/gambar7"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/image7"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/teks6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gambar7"
        android:text="Let’s get started"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="10sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teks6"
        android:layout_centerHorizontal="true"
        android:text="Sign up or login into see what’s your \nfavorite song"
        android:textAlignment="center"
        android:textColor="#85433A3A"
        android:textSize="16dp"
        android:id="@+id/teks7"
        android:layout_marginTop="15sp"
        android:lineHeight="24dp"
        />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/teks7"
        android:text="Sign up"
        android:layout_marginStart="50dp"
        android:textSize="16dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20sp"
        android:backgroundTint="#0C134F"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApple"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/btnSignUp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:text="Continue with apple"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:backgroundTint="@color/white"

        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoogle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/btnApple"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:text="Continue with Google"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:backgroundTint="@color/white"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        />

    <TextView
        android:id="@+id/teks8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGoogle"
        android:layout_centerHorizontal="true"
        android:text="By signing up or logging in, i accept the Suround"
        android:textSize="13dp"
        android:layout_marginTop="25sp"
        />

    <TextView
        android:id="@+id/teks9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teks8"
        android:text="Terms of services"
        android:layout_marginStart="70dp"
        android:textSize="13dp"
        android:textColor="#1727B8"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/teks10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="and"
        android:layout_below="@+id/teks8"
        android:layout_toRightOf="@+id/teks9"
        android:layout_marginTop="4dp"
        android:layout_marginStart="5dp"
        android:textSize="13dp"
        />

    <TextView
        android:id="@+id/teks11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:layout_below="@+id/teks8"
        android:layout_toRightOf="@+id/teks10"
        android:layout_marginTop="4dp"
        android:layout_marginStart="5dp"
        android:textSize="13dp"
        android:textColor="#1727B8"
        />
</RelativeLayout>